<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" MinWidth="300" MinHeight="400"
             x:Class="VWeaponEditor.Avalonia.Processes.ProcessSelectionUserInputControl">
    <Grid RowDefinitions="26,*" ColumnDefinitions="*,26">
        <TextBox x:Name="PART_SearchTextBox" Grid.Row="0" BorderThickness="0,0,0,1" Background="{DynamicResource ABrush.Tone3.Background.Static}"/>
        <Button x:Name="PART_RefreshCommand" Grid.Column="1" BorderThickness="1,0,0,1"/>
        <DockPanel Grid.Row="1" Grid.ColumnSpan="2" LastChildFill="True">
            <ProgressBar x:Name="PART_ProgressBar" IsIndeterminate="True" DockPanel.Dock="Bottom" Height="20" BorderThickness="0,1,0,0"/>
            <ListBox x:Name="PART_ListBox" BorderThickness="0" Background="{DynamicResource ABrush.Tone1.Background.Static}"/>
        </DockPanel>
    </Grid>
</UserControl>
